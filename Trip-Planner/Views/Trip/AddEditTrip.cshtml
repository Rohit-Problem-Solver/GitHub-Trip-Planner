@model Model_Classes.Model.TripDetail

@{
    ViewData["Title"] = "AddTrip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddTrip</h1>

<h4>TripDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEditTrip">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div>
                 @Html.HiddenFor(m => m.TripId)
             </div>
            <div class="form-group">
                <label asp-for="NoOfDays" class="control-label"></label>
                <input asp-for="NoOfDays" value="null" class="form-control" />
                <span asp-validation-for="NoOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfPeople" class="control-label"></label>
                <input asp-for="NoOfPeople" value="null" class="form-control" />
                <span asp-validation-for="NoOfPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" value="null" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
